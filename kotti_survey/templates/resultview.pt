<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml"
      xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      metal:use-macro="api.macro('kotti:templates/view/master.pt')"
      i18n:domain="kotti_quiz">

  <div metal:fill-slot="content" class="content">

    <h1>${context.title}</h1>
    <p class="description">
      ${context.description}
    </p>
    <div class="table-responsive">
      <table class="table result-table">
        <thead>
          <tr>
            <th class="questions">Questions</th>
            <th class="answers">Answers</th>
          </tr>
        </thead>
        <tbody>
          <tr tal:repeat="question questions">
            <td class="question">${question.title}</td>
            <td class="answer">
              <ul>
                <li  tal:repeat="answer answers.get(question.name, [])">
                  ${answer}
                </li>
              </ul>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</html>
