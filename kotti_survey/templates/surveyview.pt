<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml"
      xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      metal:use-macro="api.macro('kotti:templates/view/master.pt')"
      tal:define="questions context.children_with_permission(request)"
      i18n:domain="kotti_quiz">

  <div metal:fill-slot="content" class="content">

    <h1>${context.title}</h1>
    <p class="description">
      ${context.description}
    </p>

    <form action="${request.resource_url(context)}" method="POST" tal:condition="questions">
      <ol>
        <li tal:repeat="question questions" style="margin-bottom: 10px">
          ${question.title}
          <div tal:condition="not: question.children">
            <input type="text" name="${question.name}"/>
          </div>
          <div tal:repeat="answer question.children">
            <input tal:attributes="type question.question_type" name="${question.name}" value="${answer.title}"/>
            ${answer.title}
          </div>
        </li>
      </ol>
      <input type="submit" value="Check Answers" i18n:attributes="value"/>
    </form>
    <div tal:condition="not questions" class="no-questions">
      <h4>No question was added. Please add your set of survey questions now.</h4>
      <a href="${request.resource_url(context, 'add_question')}" class="btn btn-primary">
        Add Question
      </a>
    </div>

  </div>
</html>
